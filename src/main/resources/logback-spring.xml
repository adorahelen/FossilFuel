<configuration>

    <!-- 로그 파일 저장 위치와 형식 설정 -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/application.log</file> <!-- logs 디렉토리에 application.log 파일 생성 -->
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %-5level - %logger{36} - %msg%n</pattern> <!-- 로그 패턴 -->
        </encoder>
    </appender>

    <!-- 로그 레벨 설정 -->
    <root level="info">
        <appender-ref ref="FILE" />
    </root>

</configuration>